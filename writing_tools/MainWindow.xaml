<Window x:Class="writing_tools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:writing_tools"
        mc:Ignorable="d"
        Title="Writing Tools" Height="450" Width="1300">
    <Grid>
        <Canvas x:Name="keyboardCanvas" MinWidth="1300" MinHeight="400"/>
        <Label x:Name="activeKeysLabel" Content="" Margin="0,0,0,0" Height="25" Width="650" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontFamily="Calibri" RenderTransformOrigin="0,0" Padding="5,5,5,5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14"/>
        <Label x:Name="curserPositionLabel" Content="" Margin="650,0,0,0" Height="25" Width="650" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontFamily="Calibri" RenderTransformOrigin="0,0" Padding="5,5,5,5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14"/>
    </Grid>
</Window>
